/**
 * Dependencies
 */
 var cmd = require('../lib/cmdLine')
  , render = require('../lib/render');

var args =  process.argv.slice(2)
  , opts =  cmd.getOptions(args)
  , files = cmd.getFiles(args);



if (opts.watchFiles && files.length) {
    


} else if (files.length) {
    files.forEach(function(file) {
       render(file);
    });
    console.log();
    console.log('files compiled successfully.');
}












  /*  debugz  */
//console.log(""); console.log("options are "); console.log(opts);
console.log("");console.log(""); console.log("file list: " + files);
//console.log("source: " + source + " target: " + target);